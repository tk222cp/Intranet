<div class="navbar navbar-inverse navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container-fluid">
			<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</a>

			<%= link_to "Intranet Inc.", root_path, :class => "brand" %>
			<div class="nav-collapse collapse">
				<p class="navbar-text pull-right">
					<% if user_signed_in? %>
						Signed in as <%= link_to current_user.email, edit_admin_user_path(current_user) %>.
							<%= link_to "Sign out", destroy_user_session_path, :method => :delete %>						
					<% end %>
				</p>
				<ul class="nav">
					<% if user_signed_in? && current_user.admin? %>
						<li><%= link_to "Users", admin_users_path %></li>
					<% end %>
					<% if user_signed_in? %>
						<li><%= link_to "Document", assets_path %></li>

						<li>
							<%= form_tag(search_path, :method => 'get', :class => "form-search search_box_margin") do %>
								<div class="input-prepend">
									<%= submit_tag "Search", :class => "btn" %> 
									<%= text_field_tag "search", params[:search], :placeholder => "Search for tags", :class => "span2 search-query" %>								
								</div>
							<% end %>
						</li>
					<% end %>
				</ul>
			</div>
		</div>
	</div>
</div>