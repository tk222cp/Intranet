<%= render 'shared/app_top' %>
<div class="hero-unit">
	<h2>All users | Manage users</h2>
	<%= link_to 'New user', new_admin_user_path, :class => 'btn btn-primary pull-right' %>
	<% @users.each do |u| %>
		<div><%= u.first_name %> <%= u.last_name %>: <%= link_to u.email, admin_user_path(u) %></div>
	<% end %>	
</div>

<%= render 'shared/app_bottom' %>