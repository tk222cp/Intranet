<%= render "shared/app_top" %> 

<div class="hero-unit">

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html =>{:class => "form-signin"} ) do |f| %>
<h2 class="form-signin-heading">Sign in</h2>
  <%= f.email_field :email, :autofocus => true, :placeholder => "email" %></br>
  
  <%= f.password_field :password, :placeholder => "password" %>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me, :class => "pull-left" %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in", :class => "btn btn-large btn-primary" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>

<%= render "shared/app_bottom" %>